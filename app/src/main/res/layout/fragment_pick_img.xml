<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogs.PickImgFragment"
    android:background="@color/background_color">


    <TextView
        android:id="@+id/tvGaleri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/galeri"
        android:drawablePadding="5dp"
        android:text="Galeri"
        android:textColor="@color/white_greyish"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/camera"
        android:drawablePadding="5dp"
        android:text="Kamera"
        android:textColor="@color/white_greyish"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvGaleri"
        app:layout_constraintStart_toStartOf="@+id/tvGaleri"
        app:layout_constraintTop_toBottomOf="@+id/tvGaleri" />
</android.support.constraint.ConstraintLayout>